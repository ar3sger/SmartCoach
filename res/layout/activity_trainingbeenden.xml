<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radial"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainingszeit: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/zeitAnzeigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anzeigen"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_zurueck"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_startworkout"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:text="Haupt MenÃ¼"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/lv_workoutlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

</LinearLayout>